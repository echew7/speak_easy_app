<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="speakeasy.com.speakeasy" >

    <uses-permission android:name="com.google.android.glass.permission.DEVELOPMENT" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="speakeasy.com.speakeasy.MainActivity"
            android:icon="@drawable/ic_glass_logo"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="com.google.android.glass.action.VOICE_TRIGGER" />
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="com.google.android.glass.VoiceTrigger"
                android:resource="@xml/speakeasy_show" />
        </activity>
        <activity
            android:name="speakeasy.com.speakeasy.BaseSpeakEasyActivity"
            android:icon="@drawable/ic_glass_logo"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name="speakeasy.com.speakeasy.TutorialActivity"
            android:icon="@drawable/ic_glass_logo"
            android:label="@string/title_activity_tutorial" >
        </activity>
        <activity
            android:name="speakeasy.com.speakeasy.PhrasesActivity"
            android:icon="@drawable/ic_glass_logo"
            android:label="@string/title_activity_phrases" >
        </activity>
        <activity
            android:name="speakeasy.com.speakeasy.TranslationActivity"
            android:icon="@drawable/ic_glass_logo"
            android:label="@string/title_activity_translation" >
        </activity>
    </application>

</manifest>
